{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "allowUnreachableCode": true,
    "baseUrl": ".", // This must be specified if "paths" is.
    "paths": {
      "*": ["node_modules", "src"] // 此处映射是相对于"baseUrl"
    }
  },
  "include": ["./src/*"]
}
